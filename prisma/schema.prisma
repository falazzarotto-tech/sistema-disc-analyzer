generator client {
  provider = "prisma-client-id-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(uuid())
  name      String
  email     String       @unique
  context   String?
  answers   DiscAnswer[]
  createdAt DateTime     @default(now())
}

model DiscAnswer {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  questionId Int
  dimension  String   // Mudamos de Enum para String para total flexibilidade
  score      Int
  createdAt  DateTime @default(now())
}

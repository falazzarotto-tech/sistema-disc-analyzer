generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String
  context   String   @default("Profissional") // Novo campo para a din√¢mica contextual
  createdAt DateTime @default(now())
  answers   Answer[]
}

model Answer {
  id         String   @id @default(uuid())
  userId     String
  questionId Int
  dimension  String   // D, I, S, C (Camadas de Marston)
  score      Int
  user       User     @relation(fields: [userId], references: [id])
}

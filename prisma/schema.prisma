generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String       @id @default(uuid())
  name  String
  email String       @unique
  answers DiscAnswer[]
}

model DiscAnswer {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  questionId Int
  dimension  String
  score      Int
  createdAt  DateTime @default(now())
}

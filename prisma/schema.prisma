generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  context   String?
  answers   DiscAnswer[]
  createdAt DateTime @default(now())

  @@map("users")
}

model DiscAnswer {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  questionId Int
  dimension  String
  score      Int
  createdAt  DateTime @default(now())

  @@map("disc_answers")
}
